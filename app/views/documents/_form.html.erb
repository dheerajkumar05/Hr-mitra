<%= form_with model: document do |form| %>  
  <div class="row">
	  <div class="col-lg-4">
		  <div class="form-group">
			  <%= form.label :name,class: "mb-2 mt-3"%>
			  <%= form.text_field :name,placeholder:"Name", class: "form-control form-control-lg rounded-0"%>
			  <% @document.errors.full_messages_for(:name).each do |message|%>
			  <p class="text-danger"><%= message%></p>
			  <% end %>
		  </div>

		  <div class="form-group">
			  <%= form.label :doc_type,class: "mb-2 mt-3"%>
			  <%= form.select :doc_type, options_for_select(Document::DOC_TYPES,selected: document.doc_type),{prompt: "Select Document Type"}, {class: "form-select form-select-lg rounded-0"} %>
			  <% @document.errors.full_messages_for(:doc_type).each do |message|%>
			  <p class="text-danger"><%= message%></p>
			  <% end %>
		  </div>
		  <div class="form-group">
			  <%= form.label :employee_id,class: "mb-2 mt-3"%>
			  <%= form.select :employee_id, options_for_select(Employee.all.map {|employee| [employee.name_with_email,employee.id]},selected: document.employee_id),{prompt: "Select employee"}, {class: "form-select form-select-lg rounded-0"} %>
			  <%#= form.select :employee_id, options_for_select(Employee.pluck(:first_name,:id),selected: document.employee_id),{prompt: "Select employee"}, {class: "form-select form-select-lg rounded-0"} %>
			  <% @document.errors.full_messages_for(:employee_id).each do |message|%>
			  <p class="text-danger"><%= message%></p>
			  <% end %>
		  </div>
		  <div class="form-group">
		  	<%= form.label :image, class:"mb-2 mt-2" %><br>
		  	<%= form.file_field :image%>
	  </div>
	  <div class="row">
			<div class="col-lg-4">
				<div class="form-group">
					<%= form.submit class: "btn btn-info rounded-0 mt-3 mb-3"%>
					<%= link_to "Back to Document",documents_path,class:"btn btn-outline-info rounded-0 mt-3 mb-3"%>
				</div>
			</div>
       </div>
<% end %>
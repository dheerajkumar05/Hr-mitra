<div class="col-lg-10">
	<%= flash[:notice]%>
<div class="card rounded-0 mt-5">
	<div class="card-body">
		<h2 class="text-center">Listing Documents</h2>
	</div>
</div>
<%= link_to "Create New Document",new_document_path,class:"btn btn-info rounded-0 mt-4"%>
<table class="table table-info table-bordered mt-4">
	<thead>
		<tr>
			<th>Name</th>
			<th>Doc_type</th>
			<th>Employee</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @document.each do |document|%>
		<tr>
			<td><%= document.name%></td>
			<td><%= document.doc_type%></td>
			<td><%= link_to document.employee.name, employee_path(document.employee),class:"btn btn-outline-dark rounded-0"%></td>
			<td>

				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						Actions
					</button>

					<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						<li><%= link_to "Edit",edit_document_path(document),class:" dropdown-item"%></li>
						<li><%= link_to "View",document_path(document),class:"dropdown-item"%></li>
						<li><%= link_to "Delete",document_path(document),class:"dropdown-item",method: :delete,data:{confirm:"Are you sure you, want to delete this record ?"}%>
							
						</li>
					</ul>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
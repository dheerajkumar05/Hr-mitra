<div class="col-lg-10">
	<div class="card rounded-0 mt-5">
		<div class="card-body">
			<h2 class="text-center mb-5">Document Detail</h2>
			<div class="row mt-5">
				<div class="col-lg-6">
					<% if @document.image.attached? %>
					<%= image_tag @document.image %>
					<% end %>
					<p class="lead"><strong> Name :</strong><%= @document.name %></p>
					<p class="lead"><strong>Doc Type :</strong><%= @document.doc_type %></p>
					<p class="lead"><strong>Document Id :</strong><%= @document.employee_id %></p>
				</div>
			</div>
			<%= link_to "Edit Document",edit_document_path(@document),class:"btn btn-info rounded-0 mt-3 mb-3"%>
			<%= link_to "Back to Document",documents_path,class:"btn btn-outline-info rounded-0 mt-3 mb-3"%>
		</div>
	</div>
</div>


	<div class="col-lg-4">
		<div class="form-group">
			<%= form.label :first_name,class: "mb-2 mt-3"%>
			<%= form.text_field :first_name,placeholder:"First Name", class: "form-control form-control-lg rounded-0"%>
			<% @employee.errors.full_messages_for(:first_name).each do |message|%>
			<p class="text-danger"><%= message%></p>
			<% end %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="form-group">
			<%= form.label :last_name,class: "mb-2 mt-3"%>
			<%= form.text_field :last_name,placeholder:"Last Name", class: "form-control form-control-lg rounded-0"%>
			<% @employee.errors.full_messages_for(:last_name).each do |message|%>
			<p class="text-danger"><%= message%></p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				<%= form.label :email,class: "mb-2"%>
				<%= form.text_field :email,placeholder:"Email", class: "form-control form-control-lg rounded-0"%>
				<% @employee.errors.full_messages_for(:email).each do |message|%>
				<p class="text-danger"><%= message%></p>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<div class="form-group">
					<%= form.label :date_of_birth,class: "mb-2"%>
					<%= form.date_field :date_of_birth, class: "form-control form-control-lg rounded-0"%>
					<% @employee.errors.full_messages_for(:date_of_birth).each do |message|%>
					<p class="text-danger"><%= message%></p>
					<% end %>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="form-group">
					<%= form.label :age,class: "mb-2"%>
					<%= form.number_field :age,placeholder:"Age", class: "form-control form-control-lg rounded-0"%>

				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<div class="form-group">
					<%= form.label :city,class: "mb-2"%>
					<%= form.text_field :city,placeholder:"City", class: "form-control form-control-lg rounded-0"%>
					<% @employee.errors.full_messages_for(:city).each do |message|%>
					<p class="text-danger"><%= message%></p>
					<% end %>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="form-group">
					<%= form.label :pincode,class: "mb-2"%>
					<%= form.text_field :pincode,placeholder:"Pincode", class: "form-control form-control-lg rounded-0"%>
					<% @employee.errors.full_messages_for(:pincode).each do |message|%>
					<p class="text-danger"><%= message%></p>
					<% end %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-8">
					<div class="form-group">
						<%= form.label :address,class: "mb-2"%>
						<%= form.text_field :address,placeholder:"Address", class: "form-control form-control-lg rounded-0"%>
						<% @employee.errors.full_messages_for(:address).each do |message|%>
						<p class="text-danger"><%= message%></p>
						<% end %>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-4">
						<div class="form-group">
							<%= form.label :contact_no,class: "mb-2"%>
							<%= form.text_field :contact_no,placeholder:"Contact No", class: "form-control form-control-lg rounded-0"%>
						</div>
					</div>

					<div class="row">
						<div class="col-lg-4">
							<div class="form-group">
								<%= form.submit class: "btn btn-info rounded-0 mt-3 mb-3"%>
								<%= link_to "Back to Employee",employees_path,class:"btn btn-outline-info rounded-0 mt-3 mb-3"%>

							</div>
						</div>
					</div>
				</div>
<% end %>

